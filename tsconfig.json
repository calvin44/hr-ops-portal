{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"], // Standard fallback
      "@lib/*": ["./app/lib/*"], // Specific alias for lib folder
      "@utils/*": ["./app/utils/*"], // Specific alias for utils folder
      "@types": ["./app/types"], // Specific alias for types folder
      "@config": ["./app/config"], // Specific alias for customHooks folder
      "@customHooks": ["./app/customHooks"], // Specific alias for customHooks folder
      "@components": ["./app/components"], // Specific alias for components folder
      "@services": ["./app/services"], // Specific alias for services folder
      "@context": ["./app/context"] // Specific alias for context folder
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
